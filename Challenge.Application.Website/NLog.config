<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-AspNetCore.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
  <!-- the targets to write to -->
  <targets>
    <target xsi:type="NLogViewer"
            name="Website"/>
    <target xsi:type="File" name="Log" fileName="${basedir}/logs/${shortdate}_LogsWebSite.log"
        layout="${longdate} ${callsite} ${uppercase:${level}} ${message}" />
    <target xsi:type="File" name="Errores" fileName="${basedir}/logs/${shortdate}_ErrorsWebSite.log"
            layout="${longdate} ${callsite} ${uppercase:${level}} ${message}" />
    <target xsi:type="File" name="Trace" fileName="${basedir}/logs/${shortdate}_TraceWebSite.log"
            layout="${longdate} ${callsite} ${uppercase:${level}} ${message}" />

    <target name="database" xsi:type="Database">
      <dbProvider>Oracle.ManagedDataAccess.Client.OracleConnection, Oracle.ManagedDataAccess</dbProvider>
      <connectionStringName>CoreConnection</connectionStringName>
      <commandType>StoredProcedure</commandType>
      <commandText>Commons.NLogAdd</commandText>
      <parameter name="nLogMachineName" layout="${machinename}" />
      <parameter name="nLogLevel" layout="${level}" />
      <parameter name="nLogMessage" layout="${message}" />
      <parameter name="nLogLogger" layout="${logger}" />
      <parameter name="nLogCallsite" layout="${callsite}" />
      <parameter name="nLogException" layout="${exception:tostring}" />
    </target>
  </targets>

  <rules>
    <logger name="Challenge.*" minlevel="Trace" writeTo="Trace" />
    <logger name="Challenge.*" minlevel="Info" writeTo="Log" />
    <logger name="Challenge.*" minlevel="Error" writeTo="Errores" />
  </rules>
</nlog>